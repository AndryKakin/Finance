<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:paddingLeft="@dimen/activity_horizontal_margin"    android:paddingRight="@dimen/activity_horizontal_margin"    android:paddingTop="@dimen/activity_vertical_margin"    android:paddingBottom="@dimen/activity_vertical_margin"    tools:context="com.simplegames.finance.ViewModels.StartActivity">    <Button        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:text="@string/start_add_product"        android:id="@+id/addProductButtonView"        android:layout_marginTop="50dp"        android:layout_alignParentTop="true"        android:onClick="addNewProduct_onClick"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:layout_alignRight="@+id/displayAllProductsButtonView"        android:layout_alignEnd="@+id/displayAllProductsButtonView" />    <Button        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:text="@string/start_show_all_products"        android:id="@+id/displayAllProductsButtonView"        android:layout_alignParentTop="true"        android:onClick="displayAllProducts_onClick"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:layout_alignRight="@+id/addShopButtonView"        android:layout_alignEnd="@+id/addShopButtonView" />    <Button        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:text="@string/start_add_shop"        android:id="@+id/addShopButtonView"        android:onClick="addNewShop_onClick"        android:layout_below="@+id/displayAllShopsButtonView"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true" />    <Button        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:text="@string/start_show_all_shops"        android:id="@+id/displayAllShopsButtonView"        android:onClick="displayAllShops_onClick"        android:layout_below="@+id/addProductButtonView"        android:layout_alignRight="@+id/addProductButtonView"        android:layout_alignEnd="@+id/addProductButtonView"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true" />    <Button    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:text="@string/purchase_add_new_purchase"    android:id="@+id/button"    android:layout_below="@+id/addShopButtonView"    android:layout_alignParentLeft="true"    android:layout_alignParentStart="true"    android:layout_alignRight="@+id/addShopButtonView"    android:layout_alignEnd="@+id/addShopButtonView"    android:onClick="displayAddNewPurchase_onClick"/>    <Button        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="@string/purchase_show_all_purchases"        android:id="@+id/displayAllOperationsButtonView"        android:layout_below="@+id/button"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:layout_alignRight="@+id/addShopButtonView"        android:layout_alignEnd="@+id/addShopButtonView"        android:onClick="displayShowAllPurchases_onClick"/></RelativeLayout>