<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:paddingLeft="@dimen/activity_horizontal_margin"    android:paddingRight="@dimen/activity_horizontal_margin"    android:paddingTop="@dimen/activity_vertical_margin"    android:paddingBottom="@dimen/activity_vertical_margin"    tools:context="com.simplegames.finance.app.StartActivity">    <Button        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:text="@string/start_add_product"        android:id="@+id/addProductButtonView"        android:layout_marginLeft="25dp"        android:layout_marginRight="25dp"        android:layout_marginTop="50dp"        android:layout_alignParentTop="true"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:onClick="addNewProduct_onClick"/>    <Button        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:text="@string/start_show_all_products"        android:id="@+id/displayAllProductsButtonView"        android:layout_marginLeft="25dp"        android:layout_marginRight="25dp"        android:layout_alignParentTop="true"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:onClick="displayAllProducts_onClick"/>    <Button        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:text="@string/start_add_shop"        android:id="@+id/addShopButtonView"        android:layout_marginLeft="25dp"        android:layout_marginRight="25dp"        android:layout_alignParentTop="true"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:onClick="addNewShop_onClick"/>    <Button        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:text="@string/start_show_all_shops"        android:id="@+id/displayAllShopsButtonView"        android:layout_marginLeft="25dp"        android:layout_marginRight="25dp"        android:layout_alignParentTop="true"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:onClick="displayAllShops_onClick"/></RelativeLayout>